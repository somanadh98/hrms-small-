{
  "swagger": "2.0",
  "info": {
    "title": "HRMS API",
    "version": "1.0.0"
  },
  "basePath": "/api/v1",
  "schemes": ["http"],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register new user",
        "tags": ["Auth"],
        "parameters": [{"in": "body", "name": "body", "required": true, "schema": {"type": "object"}}],
        "responses": {"201": {"description": "User registered successfully"}}
      }
    },
    "/auth/login": {
      "post": {
        "summary": "User login endpoint",
        "tags": ["Auth"],
        "parameters": [{"in": "body", "name": "body", "required": true, "schema": {"type": "object"}}],
        "responses": {"200": {"description": "Login successful"}}
      }
    },
    "/employees": {
      "get": {
        "summary": "List employees",
        "tags": ["Employees"],
        "security": [{"BearerAuth": []}],
        "responses": {"200": {"description": "List of employees"}}
      },
      "post": {
        "summary": "Create employee",
        "tags": ["Employees"],
        "security": [{"BearerAuth": []}],
        "parameters": [{"in": "body", "name": "body", "required": true, "schema": {"type": "object"}}],
        "responses": {"201": {"description": "Employee created"}}
      }
    },
    "/attendance": {
      "get": {
        "summary": "List attendance",
        "tags": ["Attendance"],
        "security": [{"BearerAuth": []}],
        "responses": {"200": {"description": "Attendance records"}}
      },
      "post": {
        "summary": "Add attendance",
        "tags": ["Attendance"],
        "security": [{"BearerAuth": []}],
        "parameters": [{"in": "body", "name": "body", "required": true, "schema": {"type": "object"}}],
        "responses": {"201": {"description": "Attendance added"}}
      }
    },
    "/leaves": {
      "get": {
        "summary": "List leaves",
        "tags": ["Leaves"],
        "security": [{"BearerAuth": []}],
        "responses": {"200": {"description": "Leave records"}}
      },
      "post": {
        "summary": "Apply for leave",
        "tags": ["Leaves"],
        "security": [{"BearerAuth": []}],
        "parameters": [{"in": "body", "name": "body", "required": true, "schema": {"type": "object"}}],
        "responses": {"201": {"description": "Leave application submitted"}}
      }
    }
  },
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  }
}
